<h2>Editing Book</h2>
<div>
  <%= form_with model: @book do |f| %>
    <label for="inputTitle">Title</label>
    <%= f.text_field :title %>
    <label for="inputOpinion">Opinion</label>
    <%= f.text_area :body %>
    <%= f.submit "Update Book" %>
  <% end %>
</div>

<div>
  <%= link_to "Show",book_path(@book.id) %> |
  <%= link_to "Back",books_path %>
</div>