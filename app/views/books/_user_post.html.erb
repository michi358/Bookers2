<div>
  <%= flash[:notice] %>
</div>
<!--投稿のエラーメッセージ-->
<% if book.errors.any? %>
  <%= book.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--User情報-->
<h2>User info</h2>
<div class="contenr">
  
  <table class="table">
    <tr><%= image_tag book.user.get_profile_image(100,100) %></tr>
    <tr>
      <th>name</th>
      <th><%= book.user.name%></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= book.user.introduction %></th>
    </tr>
  </table>
</div>

<!--編集画面へのリンク-->
<%= link_to 'リンクアイコン',edit_user_path(current_user.id) %>


<!--投稿フォーム-->
<h2>New book</h2>

<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>