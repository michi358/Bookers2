<div class="row justify-content-center">
<h2>User info</h2>
</div>

<div class="container px-5">
  <div id="errors_explanation">
  <% if @user.errors.any? %>
  <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
  <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  </div>
</div>

  
<div class="row justify-content-center">
  <%= form_with model: @user do |f| %>
  <div class="form-group">
    <p>Name</p>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <p>Image</p>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>
  <div class="form-group">
    <p>Introduction</p>
    <%= f.text_area :introduction %>
  </div>
  <div class="form-group">
    <%= f.submit "Update User", class:"btn btn-secondary" %>
  </div>
  <% end %>
</div>