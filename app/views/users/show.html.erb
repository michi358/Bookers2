<div class= "container">
  <div class= "row" >
<!--User info,投稿フォーム-->
<%= render 'books/user_post', book: @book %>

<!--ユーザーの投稿一覧-->
    <div class="col-md-8 offset-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do | book| %>
          <tr>
            <td>
              <%= image_tag @user.get_profile_image(100,100) %>
            </td>
            <td><%= link_to book.title,book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
              <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


